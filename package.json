{
  "name": "commit-message-auto",
  "displayName": "Commit Message Auto",
  "description": "Generate conventional commit messages using AI",
  "version": "0.1.0",
  "publisher": "lohaaa",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lohaaa/git-commit-message-extension"
  },
  "keywords": [
    "git",
    "commit",
    "commit message",
    "ai",
    "artificial intelligence",
    "conventional commits",
    "openai",
    "gpt",
    "auto commit",
    "generate commit",
    "scm"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-message-auto.generate",
        "title": "Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "commit-message-auto.openSettings",
        "title": "Commit Message Auto: Open Settings"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commit-message-auto.generate",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "Commit Message Auto",
      "properties": {
        "commitMessageAuto.activeProvider": {
          "type": "string",
          "default": "",
          "description": "Active provider ID"
        },
        "commitMessageAuto.promptMode": {
          "type": "string",
          "enum": ["low", "medium", "high", "custom"],
          "enumDescriptions": [
            "Low: Generate title only",
            "Medium: Generate title + summary of changes by module",
            "High: Generate title + summary of changes by file, with special changes listed separately",
            "Custom: Use custom prompt template"
          ],
          "default": "low",
          "description": "Commit message generation mode"
        },
        "commitMessageAuto.promptTemplate": {
          "type": "string",
          "default": "You are a git commit message generator. Based on the staged changes, generate a concise commit message following the Conventional Commits specification.\n\n## Context\nBranch: {branch}\nStaged files:\n{files}\n\nStaged changes:\n{diff}\n\n## Requirements\n1. Format: `type(scope): subject` where scope is optional\n2. Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert\n3. Subject: Clear, concise description in {lang}\n4. Maximum length: 72 characters for the first line\n5. Use `!` for breaking changes if needed (e.g., `feat!: breaking change`)\n6. Use imperative mood (e.g., \"add\" not \"added\" or \"adds\")\n7. Do NOT include body or footer, only the title line\n\n## Output\nGenerate ONLY the commit message title, nothing else. No explanations, no markdown, no quotes.",
          "description": "Custom prompt template (used when promptMode is 'custom')",
          "editPresentation": "multilineText"
        },
        "commitMessageAuto.language": {
          "type": "string",
          "default": "English",
          "description": "Target language for commit messages"
        },
        "commitMessageAuto.maxTitleLength": {
          "type": "number",
          "default": 72,
          "description": "Maximum length for commit message title"
        },
        "commitMessageAuto.providers": {
          "type": "array",
          "default": [],
          "description": "List of AI providers",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier (UUID)"
              },
              "name": {
                "type": "string",
                "description": "Display name"
              },
              "baseUrl": {
                "type": "string",
                "description": "API base URL"
              },
              "model": {
                "type": "string",
                "description": "Model name"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.23.0",
  "license": "MIT"
}
